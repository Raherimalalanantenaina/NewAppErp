@model NewAppErp.Models.Login.Account
@{
    Layout = "~/Views/Shared/_Layoutlogin.cshtml";
}

<div class="login-container">
    <div class="login-header">
        <img src="~/images/erpnext-logo.png" alt="ERPNext HR" class="logo">
        <h1>Portail RH</h1>
        <p>Gestion des ressources humaines</p>
    </div>
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    <form method="post" asp-action="checkedlogin" asp-controller="Login" class="login-form">
        <div class="form-group">
            <label for="email">Nom d'utilisateur</label>
            <input type="text" id="email" asp-for="usr" required>
        </div>
        
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" asp-for="pwd" required>
        </div>
                
        <button type="submit" class="login-btn">Se connecter</button>
    </form>
    
    <div class="login-footer">
        <p>Â© @DateTime.Now.Year ERPNext HR - Version 1.0</p>
    </div>
</div>
