@model List<NewAppErp.Models.Salary.EmployeeSalaryComponentGridViewModel>
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
    var components = ViewBag.ComponentNames as List<string> ?? new List<string>();
}
<div class="card">
    <div class="card-header">
        <h2 class="card-title">Tableau des Salaires Employé</h2>
    </div>
    
    <table>
        <thead>
            <tr>
                <th>Employé</th>
                <th class="text-right">Mois Annee</th>
                @foreach (var comp in components)
                {
                    <th class="text-right">@comp</th>
                }
                <th class="text-right">Net à Payer</th>
                <th class="text-right">Total Earning</th>
                <th class="text-right">Total Deduction</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="text-bold">Total</td>
                <td colspan="1"></td> <!-- Ajuste selon tes colonnes fixes -->
                @foreach (var name in ViewBag.ComponentNames as List<string>)
                {
                    var total = ((Dictionary<string, decimal>)ViewBag.ComponentTotals)[name];
                    <td class="text-right currency">@String.Format("{0:N0}", Math.Abs(total))</td>
                }
                <td class="text-right currency">
                    @String.Format("{0:N0}", Math.Abs(ViewBag.ComponentTotals != null && ((Dictionary<string, decimal>)ViewBag.ComponentTotals).ContainsKey("NetPay") 
                        ? ((Dictionary<string, decimal>)ViewBag.ComponentTotals)["NetPay"] 
                        : 0m))
                </td>
                <td class="text-right currency">
                    @String.Format("{0:N0}", Math.Abs(ViewBag.ComponentTotals != null && ((Dictionary<string, decimal>)ViewBag.ComponentTotals).ContainsKey("Gain") 
                        ? ((Dictionary<string, decimal>)ViewBag.ComponentTotals)["Gain"] 
                        : 0m))
                </td>
                <td class="text-right currency">
                    @String.Format("{0:N0}", Math.Abs(ViewBag.ComponentTotals != null && ((Dictionary<string, decimal>)ViewBag.ComponentTotals).ContainsKey("Deduction") 
                        ? ((Dictionary<string, decimal>)ViewBag.ComponentTotals)["Deduction"] 
                        : 0m))
                </td>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-bold">@item.EmployeeName</td>
                    <td class="text-right currency">@item.StartDate?.ToString("MMMM yyyy", System.Globalization.CultureInfo.InvariantCulture)</td>
                    @foreach (var comp in components)
                    {
                        <td class="text-right currency">
                            @String.Format("{0:N0}", Math.Abs(item.Components.ContainsKey(comp) ? item.Components[comp] : 0m)) 
                        </td>
                    }
                    <td class="text-right currency"><strong>@String.Format("{0:N0}", item.NetPay)</strong></td>
                    <td class="text-right currency"><strong>@String.Format("{0:N0}", item.GrossPay)</strong></td>
                    <td class="text-right currency"><strong>@String.Format("{0:N0}", item.TotalDeduction)</strong></td>
                </tr>
            }
        </tbody>
    </table>
    <div class="pagination"></div>
            @if ((int)ViewBag.CurrentPage > 1)
            {
                <a asp-action="SalairelisteEmp" asp-route-page="@(ViewBag.CurrentPage - 1)"
                asp-route-mois="@ViewBag.Mois"
                asp-route-annee="@ViewBag.Annee"
                class="page-btn"><i class="fas fa-chevron-left"></i></a>
            }

            @for (int i = 1; i <= (int)ViewBag.TotalPages; i++)
            {
                <a asp-action="SalairelisteEmp" asp-route-page="@i"
                asp-route-mois="@ViewBag.Mois"
                asp-route-annee="@ViewBag.Annee"
                class="page-btn @(i == (int)ViewBag.CurrentPage ? "page-btn" : "page-btn")">@i</a>
            }

            @if ((int)ViewBag.CurrentPage < (int)ViewBag.TotalPages)
            {
                <a asp-action="SalairelisteEmp" asp-route-page="@(ViewBag.CurrentPage + 1)"
                asp-route-mois="@ViewBag.Mois"
                asp-route-annee="@ViewBag.Annee"
                class="page-btn"><i class="fas fa-chevron-right"></i></a>
            }
        </div>
</div>