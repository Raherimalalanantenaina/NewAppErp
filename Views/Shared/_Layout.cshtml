<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ERPNext HRMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/base.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <button class="sidebar-toggle" onclick="toggleSidebar()">
            <i class="fas fa-bars"></i>
        </button>
        <ul>
            <li><a asp-controller="Home" asp-action="Index"><i class="fas fa-home"></i> <span>Accueil</span></a></li>
            <li><a asp-controller="Employee" asp-action="Index"><i class="fas fa-users"></i> <span>Employés</span></a></li>
            <li><a asp-controller="Leave" asp-action="Index"><i class="fas fa-calendar-alt"></i> <span>Congés</span></a></li>
            <li><a asp-controller="Payroll" asp-action="Index"><i class="fas fa-file-invoice-dollar"></i> <span>Paie</span></a></li>
            <li><a asp-controller="Salary" asp-action="Salaireliste"><i class="fas fa-chart-line"></i> <span>Rapports Salaire</span></a></li>
        </ul>
    </div>

    <!-- Main content -->
    <div class="main-content">
        <!-- Header -->
        <header class="erpnext-header">
            <div class="logo-container">
                <img src="~/images/erpnext-logo.png" alt="ERPNext HRMS Logo" class="logo">
                <span class="brand-name"></span>
            </div>
            <div class="user-actions">
                <div class="user-profile">
                    <img src="~/images/RH.jpeg" alt="User Avatar" class="avatar">
                    <span class="username">@User.Identity?.Name</span>
                    <i class="fas fa-chevron-down"></i>
                    <ul class="user-dropdown">
                        <li><a asp-controller="Login" asp-action="Profile"><i class="fas fa-user"></i> Profil</a></li>
                        <li><a asp-controller="Login" asp-action="Logout"><i class="fas fa-sign-out-alt"></i> Déconnexion</a></li>
                    </ul>
                </div>
            </div>
        </header>

        <!-- Page content -->
        <main class="erpnext-main">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('collapsed');
            document.querySelector('.main-content').classList.toggle('collapsed');
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
